<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.sourceforge.io/dtds/configuration_1_3.dtd">

<module name="Checker">
    <!-- Правила отступов (4 пробела) -->
    <module name="Indentation">
        <property name="tabWidth" value="4"/>
    </module>

    <!-- Максимальная длина строки (100 символов) -->
    <module name="LineLength">
        <property name="max" value="100"/>
        <property name="ignorePattern" value="^package|^import"/>
    </module>

    <!-- Пустые строки в конце файла -->
    <module name="EmptyLineSeparator">
        <property name="lines" value="1"/>
    </module>

    <!-- Правила для именования классов и методов -->
    <module name="TypeName">
        <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
    </module>
    <module name="MethodName">
        <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
    </module>

    <!-- Правила для проверки пустых строк перед или после методов -->
    <module name="MethodParamPad"/>
    <module name="EmptyBlock"/>

    <!-- Запрещаем использование System.out.println -->
    <module name="IllegalToken">
        <property name="tokens" value="LITERAL_system,LITERAL_out,LITERAL_println"/>
    </module>

    <!-- Правила для Spring и Java классов -->
    <module name="JavadocType"/>
</module>
