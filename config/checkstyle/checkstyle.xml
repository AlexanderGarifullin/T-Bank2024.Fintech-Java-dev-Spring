<?xml version="1.0"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
    <!-- Проверка на наличие новой строки в конце файла -->
    <module name="NewlineAtEndOfFile"/>

    <!-- Ограничение длины файла -->
    <module name="FileLength">
        <property name="max" value="1000"/> <!-- Максимальная длина файла (в строках) -->
    </module>

    <!-- Ограничение длины строк -->
    <module name="LineLength">
        <property name="max" value="120"/> <!-- Максимальная длина строки (в символах) -->
    </module>

    <!-- Проверка на отсутствие пробела после оператора -->
    <module name="NoWhitespaceAfter"/>

    <!-- Проверка на отсутствие пробела перед оператором -->
    <module name="NoWhitespaceBefore"/>

    <!-- Проверка на пустые блоки кода (например, пустые методы или условные операторы) -->
    <module name="EmptyBlock"/>
</module>
